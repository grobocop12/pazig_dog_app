<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RandomDogByBreedActivity">

    <Button
            android:text="@string/random_dog_again_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/get_dog_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/raceTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/random_dog_race"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/raceTextView"
            android:textAlignment="center" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/dogImageView"
            app:layout_constraintBottom_toTopOf="@+id/get_dog_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp" app:srcCompat="@android:color/black"
            android:id="@+id/dogImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/raceTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>