<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameView"
            android:textSize="30sp" android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/list_image_view" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="infoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/infoView"
            android:textSize="18sp" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/list_image_view"
            app:layout_constraintBottom_toTopOf="@+id/random_dog_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="365dp"
            android:layout_height="372dp" app:srcCompat="@android:color/black"
            android:id="@+id/list_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/nameView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/infoView"/>
    <Button
            android:text="@string/list_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/random_dog_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.502"/>
</android.support.constraint.ConstraintLayout>